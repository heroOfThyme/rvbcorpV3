---
import Layout from '~/layouts/PageLayout.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Steps from '~/components/widgets/Steps.astro';
import PricingCards from '~/components/widgets/PricingCards.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';
import GradientFeatures from '~/components/widgets/GradientFeatures.astro';

const metadata = {
  title: 'Web Development Services | RVB Corp - Burlington Web Agency',
  description:
    'Professional web development services from our Burlington-based agency. Custom websites, e-commerce solutions, and digital experiences that drive growth for your business.',
};
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <Hero2
    tagline="Web Development"
    actions={[
      {
        variant: 'primary',
        text: 'Start Your Project',
        href: '/contact#form',
        icon: 'tabler:arrow-right',
      },
      {
        variant: 'secondary',
        text: 'View Our Process',
        href: '#process',
      },
    ]}
  >
    <Fragment slot="title">
      Transform Your Business with <span class="bg-gradient-to-r from-primary to-accent bg-clip-text text-transparent"
        >Web Development</span
      > Solutions
    </Fragment>
    <Fragment slot="subtitle">
      We are experts in crafting custom web solutions that drive results. From stunning designs to seamless
      functionality, we build websites that engage users, boost conversions, and grow your business.
    </Fragment>
  </Hero2>

  <!-- Service Section -->
  <GradientFeatures
    id="services"
    title="Building Your Digital Foundation"
    subtitle="Our comprehensive web development services are designed to help businesses create a strong online presence. We offer everything from design to deployment."
    tagline="What We Offer"
    items={[
      {
        title: 'Custom Design & UI/UX',
        description:
          "Your brand's first impression matters. We create custom, user-friendly designs that look great and deliver exceptional functionality.",
        icon: 'tabler:palette',
      },
      {
        title: 'Performance Optimization',
        description:
          'Fast websites keep visitors engaged and improve search rankings. We write efficient code to ensure lightning-quick load times.',
        icon: 'tabler:rocket',
      },
      {
        title: 'Professional Content',
        description:
          'Your message matters. We provide content creation services including website copy, engaging blog posts, and photo editing.',
        icon: 'tabler:edit',
      },
      {
        title: 'SEO Integration',
        description:
          'We optimize your website for search engines, helping improve rankings and drive more organic traffic to your site.',
        icon: 'tabler:search',
      },
      {
        title: 'Secure Hosting',
        description:
          'High-performance hosting solutions keep your site running smoothly with fast load times, consistent uptime, and dedicated support.',
        icon: 'tabler:server',
      },
      {
        title: 'E-commerce Solutions',
        description:
          'Turn your website into a powerful sales platform with secure checkout, product displays, and growth-focused e-commerce experiences.',
        icon: 'tabler:shopping-cart',
      },
    ]}
  />

  <!-- Process Section -->
  <Steps
    id="process"
    title="Our Development Process"
    subtitle="A proven methodology that ensures your project is delivered on time, on budget, and exceeds expectations."
    tagline="How We Work"
    items={[
      {
        title: '1. Discovery & Planning',
        description:
          'We start by understanding your business goals, target audience, and technical requirements to create a comprehensive project roadmap.',
        icon: 'tabler:search',
      },
      {
        title: '2. Design & Prototyping',
        description:
          'Our designers create wireframes and mockups that bring your vision to life, ensuring every element serves a purpose.',
        icon: 'tabler:palette',
      },
      {
        title: '3. Development & Testing',
        description:
          'We build your website using the latest technologies, rigorously testing every feature to ensure flawless performance.',
        icon: 'tabler:code',
      },
      {
        title: '4. Launch & Optimization',
        description:
          'After a successful launch, we monitor performance and make data-driven optimizations to maximize your results.',
        icon: 'tabler:rocket',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1516321318423-f06f85e504b3?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80',
      alt: 'Web development process illustration',
    }}
  />

  <!-- Pricing Section -->
  <PricingCards
    title="Web Development Packages"
    subtitle="Choose the perfect package for your business needs"
    tagline="Pricing"
    packages={[
      {
        title: 'Starter Website',
        price: '$750',
        description: 'Perfect for small businesses looking to establish their online presence',
        features: [
          'Up to 5 pages',
          'Mobile responsive design',
          'Basic SEO optimization',
          'Contact form integration',
          '1 year hosting',
          'Domain purchasing & setup',
        ],
        callToAction: {
          text: 'Get Started',
          href: '/contact',
        },
      },
      {
        title: 'Professional Website',
        price: '$1499',
        description: 'Ideal for growing businesses that need advanced functionality',
        features: [
          'Up to 15 pages',
          'Custom design & branding',
          'Advanced SEO optimization',
          'CMS integration',
          '1 year hosting',
          'Domain purchasing & setup',
          'Performance optimization',
          'Social media integration',
        ],
        isPopular: true,
        callToAction: {
          text: 'Choose Professional',
          href: '/contact',
        },
      },
      {
        title: 'Enterprise Solution',
        price: 'Custom',
        description: 'Comprehensive solutions for large organizations with complex needs',
        features: [
          'Unlimited pages',
          'Custom web applications',
          'Advanced integrations',
          'Multi-language support',
          'Custom CMS development',
          '12 months support',
          'Dedicated project manager',
          'Training & documentation',
        ],
        callToAction: {
          text: 'Contact Us',
          href: '/contact',
        },
      },
    ]}
  />

  <!-- Benefits Section -->
  <Content
    id="benefits"
    isReversed
    title="Why Choose Our Web Development Services?"
    subtitle="We combine technical expertise with business understanding to deliver websites that drive real results."
    content="<p>Our team doesn't just build websitesâ€”we create digital experiences that connect with your audience and drive business growth. Every project is approached with a focus on your unique goals and challenges.</p><p>From the initial consultation to post-launch support, we're committed to delivering solutions that exceed expectations and provide long-term value for your business.</p>"
    items={[
      {
        title: 'Local Burlington Expertise',
        description: 'Deep understanding of the local market and business landscape.',
        icon: 'tabler:map-pin',
      },
      {
        title: 'Scalable Solutions',
        description:
          'We build websites that grow with your business, ensuring your site can handle increased traffic and functionality as you expand.',
        icon: 'tabler:trending-up',
      },
      {
        title: 'Modern Technology Stack',
        description:
          'We use the latest web technologies and frameworks to ensure your website is fast, secure, and future-proof.',
        icon: 'tabler:device-laptop',
      },
      {
        title: 'Ongoing Support',
        description:
          "Our relationship doesn't end at launch. We provide ongoing maintenance and support to keep your site running smoothly.",
        icon: 'tabler:headset',
      },
    ]}
    image={{
      src: '~/assets/images/hero-image.png',
      alt: 'Web Development Team at Work',
    }}
  />

  <!-- Section Divider -->
  <div class="w-full h-px bg-gradient-to-r from-transparent via-primary to-transparent opacity-50"></div>

  <!-- Final CTA -->
  <CallToAction
    tagline="Ready to Grow Your Business?"
    title="Get Your Custom <span class='text-white'>Website</span> Built Today"
    subtitle="Join businesses who trust our Burlington-based team with their web development. Let's create a website that drives real results for your business."
    actions={[
      {
        text: 'Get a Free Quote',
        href: '/contact#form',
        icon: 'tabler:arrow-right',
      },
      {
        text: 'See Our Work',
        href: '/portfolio',
        variant: 'secondary',
      },
    ]}
  />
</Layout>
