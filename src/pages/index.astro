---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import ProjectShowcase from '~/components/widgets/ProjectShowcase.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import ServiceCards from '~/components/widgets/ServiceCards.astro';
import AboutSection from '~/components/widgets/AboutSection.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';

const metadata = {
  title: 'AstroWind — Free template for creating websites with Astro + Tailwind CSS',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  <Hero
    tagline="Burlington's Web Agency"
    actions={[
      {
        variant: 'primary',
        icon: 'tabler:arrow-right',
        text: 'Lets Get Started',
        href: '/contact#form',
      },
      {
        variant: 'secondary',
        icon: 'tabler:briefcase',
        text: 'See Our Work',
        href: '/portfolio',
      },
    ]}
  >
    <Fragment slot="title">
      Tailored <span class="bg-gradient-to-r from-primary to-accent bg-clip-text text-transparent">Web Solutions</span>
    </Fragment>
    <Fragment slot="subtitle">
      Burlington's local web agency, our specialty is the web, including web development, automation, Google services,
      SEO, and more. Partner with us to transform your digital landscape and stay ahead in the competitive market.</Fragment
    >
  </Hero>

  <!-- Note Widget ******************* -->
  <Note />

  <!-- Services Section *************** -->
  <ServiceCards
    id="Services"
    tagline="Services"
    title="Your Digital Landscape. Covered."
    subtitle="We offer a range of services to help your business succeed online. From web development to Google services, hosting and more, we have you covered."
    services={[
      {
        title: 'Web Development',
        description:
          'We build websites tailored to your business needs. We focus on creating websites that effectively communicate your brand and drive growth.',
        icon: 'tabler:code',
        callToAction: {
          text: 'Explore This Service',
          href: '/web-development',
          target: '_self',
          class: 'btn-service',
        },
      },
      {
        title: 'Search Engine Optimization (SEO)',
        description:
          "Our SEO services are designed to increase your website's visibility in search engine results. We use proven strategies to boost your rank.",
        icon: 'tabler:search',
        callToAction: {
          text: 'Explore This Service',
          href: '/search-engine-optimization',
          target: '_self',
          class: 'btn-service',
        },
      },
      {
        title: 'Business Process Automation',
        description:
          'Our automation services streamline your operations, reduce manual tasks, and increase accuracy. Let technology work for you.',
        icon: 'tabler:arrow-right',
        callToAction: {
          text: 'Explore This Service',
          href: '/business-process-automation',
          target: '_self',
          class: 'btn-service',
        },
      },
      {
        title: 'Google Business Management',
        description:
          'Utilize the Google ecosystem to your advantage. From My Business to Ads, Analytics and more, we have services for every Google product.',
        icon: 'tabler:brand-google',
        callToAction: {
          text: 'Explore This Service',
          href: '/google-business-management',
          target: '_self',
          class: 'btn-service',
        },
      },
      {
        title: 'Web Hosting',
        description:
          'We provide reliable, secure web hosting solutions that ensure your website is always accessible and performing optimally.',
        icon: 'tabler:server',
        callToAction: {
          text: 'Explore This Service',
          href: '/web-hosting',
          target: '_self',
          class: 'btn-service',
        },
      },
    ]}
  />

  <!-- Section Divider -->
  <div class="w-full h-px bg-gradient-to-r from-transparent via-primary to-transparent opacity-50"></div>

  <!-- Project Section -->
  <ProjectShowcase
    title="Our Latest Work"
    subtitle="Showcasing the digital solutions we've crafted for our local clients"
    tagline="Portfolio"
    projects={[
      {
        title: 'Shields Cement',
        description:
          "Professional concrete contractor website featuring service showcases, testimonials, and lead generation forms for Windsor's trusted concrete specialists.",
        image: { src: '~/assets/images/test-img-2.jpg', alt: 'hello' }, // You'll need to add screenshots
        technologies: ['Astro', 'Tailwind CSS', 'Contact Forms', 'SEO'],
        liveUrl: 'https://shieldscement.ca',
        caseStudyUrl: '/case-studies/shields-cement',
        category: 'Construction',
        completedDate: '2024',
      },
      {
        title: 'Seniors Helper',
        description:
          'Compassionate cleaning service website designed specifically for seniors in Burlington, featuring accessible design and clear service information.',
        image: { src: '~/assets/images/test-img-2.jpg', alt: 'hello' }, // You'll need to add screenshots
        technologies: ['Astro', 'Accessible Design', 'Local SEO', 'Contact Forms'],
        liveUrl: 'https://seniorshelper.ca',
        caseStudyUrl: '/case-studies/seniors-helper',
        category: 'Healthcare',
        completedDate: '2024',
      },
      {
        title: 'Legacy Exteriors',
        description:
          'Professional excavation and exterior services website showcasing family-owned business values with customer testimonials and service galleries.',
        image: { src: '~/assets/images/test-img-2.jpg', alt: 'hello' }, // You'll need to add screenshots
        technologies: ['Astro', 'Reviews Integration', 'Service Showcase', 'Local SEO'],
        liveUrl: 'https://legacyexteriorsinc.com',
        caseStudyUrl: '/case-studies/legacy-exteriors',
        category: 'Construction',
        completedDate: '2024',
      },
    ]}
  />

  <!-- About Section -->
  <AboutSection
    tagline="About Us"
    title="Building Digital Solutions in <span class='text-primary'>Burlington</span>"
    subtitle="Passionate developers helping local businesses harness the power of modern technology"
    image=""
    values={[
      {
        title: 'Integrity',
        description:
          'We maintain transparency and honesty in all our dealings, going through every contract to ensure you understand everything.',
        icon: 'tabler:shield-check',
      },
      {
        title: 'Excellence',
        description:
          'Committed to delivering high-quality solutions that exceed expectations, ensuring complete satisfaction.',
        icon: 'tabler:award',
      },
      {
        title: 'Collaboration',
        description:
          'Working closely with clients to understand unique needs, fostering an environment that drives real results.',
        icon: 'tabler:users',
      },
    ]}
  />

  <!-- Section Divider -->
  <div class="w-full h-px bg-gradient-to-r from-transparent via-primary to-transparent opacity-50"></div>

  <!-- Latest Post Section -->
  <BlogLatestPosts title="Find out more content in our Blog" />

  <!-- Section Divider -->
  <div class="w-full h-px bg-gradient-to-r from-transparent via-primary to-transparent opacity-50"></div>
  Í
  <!-- Testimonials Section -->
  <Testimonials
    tagline="Client Success"
    title="Words from Our <span class='text-primary'>Amazing</span> Clients"
    subtitle="Our favourite part of this job is helping out members of our local communities"
    testimonials={[
      {
        testimonial:
          "Petar worked so hard for me. I'm almost 60 and retired. I needed one page simple website for my new business. He listened and created perfectly what I needed. He's very patient as I am not tech savvy! Thank you!!",
        name: 'Donna Irving',
        job: 'Seniors Helper - Owner',
      },
      {
        testimonial:
          'Great service. Working on improving SEO constantly. Easy to get a hold of and replies usually within hours. Changes are made the same day. We both continue to adjust the website if we notice where improvements can be made.',
        name: 'Alex Orton',
        job: 'Legacy Exteriors Inc - Owner',
      },
      {
        testimonial:
          "RVB did an outstanding job on our website. The team was professional, creative, and attentive to our vision. We felt supported every step of the way and couldn't be happier with our results. Highly recommend their web development services!",
        name: 'Slavko Vidakovic',
        job: 'S&V Memorials - Owner',
      },
    ]}
  />

  <!-- CallToAction Section -->
  <CallToAction
    tagline="Ready to Start?"
    title="Let's Build Something <span class='text-primary'>Amazing</span> Together"
    subtitle="Transform your digital presence with our expert web development services. From concept to launch, we'll bring your vision to life."
    actions={[
      {
        text: 'Start Your Project',
        href: '/contact',
        icon: 'tabler:arrow-right',
      },
      {
        text: 'View Our Work',
        href: '/portfolio',
        variant: 'secondary',
      },
    ]}
  />
</Layout>
