---
import Layout from '~/layouts/PageLayout.astro';
import ContactHero from '~/components/widgets/ContactHero.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: "Contact Us | Let's Build Something Amazing Together",
  description:
    'Ready to transform your digital presence? Contact RVB Data Sciences Corp today. We typically respond within 24 hours to discuss your project and goals.',
  keywords: 'contact RVB, web development contact, Burlington web agency, project consultation',
};
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <ContactHero
    tagline="Get In Touch"
    actions={[
      {
        variant: 'primary',
        text: 'Start Conversation',
        href: '#contact-form',
        icon: 'tabler:arrow-down',
      },
      {
        variant: 'secondary',
        text: '(365) 324-0642',
        href: 'tel:3653240642',
        icon: 'tabler:phone',
      },
    ]}
  >
    <Fragment slot="title">
      Let's Build Something <span style="background: linear-gradient(to right, rgb(198, 134, 255), rgb(119, 118, 255)); -webkit-background-clip: text; background-clip: text; -webkit-text-fill-color: transparent;">Amazing</span>
    </Fragment>

    <Fragment slot="subtitle">
      From custom websites to digital solutions â€” let's discuss how we can help your business thrive online.
    </Fragment>

    <Fragment slot="content">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        <div class="text-center">
          <div class="text-3xl md:text-4xl font-bold text-primary mb-2">24h</div>
          <div class="text-sm text-muted uppercase tracking-wider">Response Time</div>
        </div>
        <div class="text-center">
          <div class="text-3xl md:text-4xl font-bold text-primary mb-2">50+</div>
          <div class="text-sm text-muted uppercase tracking-wider">Projects</div>
        </div>
        <div class="text-center">
          <div class="text-3xl md:text-4xl font-bold text-primary mb-2">100%</div>
          <div class="text-sm text-muted uppercase tracking-wider">Satisfaction</div>
        </div>
        <div class="text-center">
          <div class="text-3xl md:text-4xl font-bold text-primary mb-2">Local</div>
          <div class="text-sm text-muted uppercase tracking-wider">Burlington</div>
        </div>
      </div>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-gradient-to-b from-transparent via-[rgb(198,134,255)]/5 to-transparent"></div>
    </Fragment>
  </ContactHero>

  <!-- Contact Form Section -->
  <section id="contact-form" class="py-16 md:py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">
      <div class="grid lg:grid-cols-2 gap-16 items-start">
        <!-- Left side - Form -->
        <div>
          <div class="mb-8">
            <div class="text-primary text-sm font-semibold uppercase tracking-wide mb-4">GET STARTED</div>
            <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Send Us a Message</h2>
            <p class="text-gray-300 text-lg">
              Ready to get started? Fill out the form and we'll get back to you within 24 hours.
            </p>
          </div>

          <!-- Your Beautiful Gradient Form Directly -->
          <form
            id="contact-form"
            data-netlify="true"
            method="POST"
            name="contact"
            class="relative p-8 rounded-3xl bg-gradient-to-br from-primary/20 via-secondary/10 to-accent/20 backdrop-blur-sm border border-gradient overflow-hidden"
            data-astro-reload
            novalidate
          >
            <!-- Animated background gradients -->
            <div
              class="absolute inset-0 bg-gradient-to-r from-primary/30 via-accent/20 to-secondary/30 opacity-50 animate-pulse"
            >
            </div>
            <div
              class="absolute top-0 right-0 w-96 h-96 bg-gradient-to-br from-primary via-accent to-secondary opacity-10 rounded-full -mt-48 -mr-48 animate-spin-slow"
            >
            </div>
            <div
              class="absolute bottom-0 left-0 w-96 h-96 bg-gradient-to-tr from-accent via-secondary to-primary opacity-10 rounded-full -mb-48 -ml-48 animate-spin-reverse"
            >
            </div>

            <!-- Floating gradient orbs -->
            <div
              class="absolute top-20 left-20 w-32 h-32 bg-gradient-to-br from-primary to-accent opacity-20 rounded-full blur-xl animate-float"
