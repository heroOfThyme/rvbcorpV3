---
import Layout from '~/layouts/PageLayout.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import ProjectShowcase from '~/components/widgets/ProjectShowcase.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Our Portfolio | RVB Corp - Burlington Web Agency',
  description:
    'Explore our portfolio of successful web development projects. See how our Burlington-based team creates custom websites and digital solutions for businesses.',
};
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <Hero2
    tagline="Our Work"
    actions={[
      {
        variant: 'primary',
        text: 'Start Your Project',
        href: '/contact#form',
        icon: 'tabler:arrow-right',
      },
      {
        variant: 'secondary',
        text: 'View Services',
        href: '/web-development',
      },
    ]}
  >
    <Fragment slot="title">
      Our <span class="bg-gradient-to-r from-primary to-accent bg-clip-text text-transparent">Portfolio</span>
    </Fragment>
    <Fragment slot="subtitle">
      Explore the websites and digital solutions we've crafted for businesses. From local companies to growing enterprises, see how our Burlington-based team brings visions to life.
    </Fragment>
  </Hero2>

  <!-- Section Divider -->
  <div class="w-full h-px bg-gradient-to-r from-transparent via-primary to-transparent opacity-50"></div>

  <!-- All Projects Section -->
  <section class="py-16 md:py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">
      <div class="text-center mb-12">
        <div class="flex items-center justify-center gap-2 text-primary mb-4">
          <span class="text-lg font-mono">|</span>
          <p class="text-sm font-medium tracking-wide uppercase font-mono">Featured Projects</p>
        </div>
        <h2 class="text-3xl md:text-4xl font-bold leading-tighter tracking-tighter font-heading text-white mb-4">
          Building Digital <span class="text-primary">Experiences</span>
        </h2>
        <p class="text-xl text-white/80 max-w-2xl mx-auto">
          Every project is a partnership. Here's how we've helped businesses grow their online presence.
        </p>
      </div>

      <!-- Project Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {
          [
            {
              title: 'Shields Cement',
              description:
                "Professional concrete contractor website featuring service showcases, testimonials, and lead generation forms for Windsor's trusted concrete specialists.",
              image: { src: '~/assets/images/test-img-2.jpg', alt: 'Shields Cement Website' },
              liveUrl: 'https://shieldscement.ca',
              category: 'Construction',
              completedDate: '2024',
              technologies: ['Astro', 'Tailwind CSS', 'Google Analytics'],
            },
            {
              title: 'Legacy Exteriors',
              description:
                'Professional excavation and exterior services website showcasing family-owned business values with customer testimonials and service galleries.',
              image: { src: '~/assets/images/test-img-2.jpg', alt: 'Legacy Exteriors Website' },
              liveUrl: 'https://legacyexteriorsinc.com',
              category: 'Construction',
              completedDate: '2024',
              technologies: ['Astro', 'React', 'SEO Optimization'],
            },
            {
              title: 'Seniors Helper',
              description:
                'Compassionate cleaning service website designed specifically for seniors in Burlington, featuring accessible design and clear service information.',
              image: { src: '~/assets/images/test-img-2.jpg', alt: 'Seniors Helper Website' },
              liveUrl: 'https://seniorshelper.ca',
              category: 'Healthcare',
              completedDate: '2024',
              technologies: ['Astro', 'Accessible Design', 'Contact Forms'],
            },
            {
              title: 'S&V Memorials',
              description:
                'Professional memorial services website with elegant design, service showcases, and gallery features for a family-owned monument business.',
              image: { src: '~/assets/images/test-img-2.jpg', alt: 'S&V Memorials Website' },
              liveUrl: '#',
              category: 'Services',
              completedDate: '2024',
              technologies: ['Astro', 'Image Gallery', 'Google Maps'],
            },
            {
              title: 'RVB Corp',
              description:
                'Our own modern web agency website featuring bold gradients, smooth animations, and comprehensive service showcases. Built to inspire and convert.',
              image: { src: '~/assets/images/test-img-2.jpg', alt: 'RVB Corp Website' },
              liveUrl: 'https://rvbcorp.com',
              category: 'Agency',
              completedDate: '2025',
              technologies: ['Astro', 'Tailwind CSS', 'TypeScript', 'Modern Animations'],
            },
            {
              title: 'Burlington Local Business',
              description:
                'Custom e-commerce solution with integrated payment processing, inventory management, and customer portal for a growing local retail business.',
              image: { src: '~/assets/images/test-img-2.jpg', alt: 'E-commerce Website' },
              liveUrl: '#',
              category: 'E-commerce',
              completedDate: '2024',
              technologies: ['React', 'Node.js', 'Stripe', 'PostgreSQL'],
            },
          ].map((project, index) => {
            const projectGradients = [
              'from-primary via-primary/90 to-secondary',
              'from-accent via-accent/90 to-primary',
              'from-secondary via-secondary/90 to-primary',
            ];

            return (
              <article class="group h-full">
                <div
                  class={`relative bg-gradient-to-br ${projectGradients[index % projectGradients.length]} rounded-3xl overflow-hidden shadow-xl hover:shadow-2xl transition-all duration-500 h-full flex flex-col hover:scale-[1.02]`}
                >
                  <!-- Project Image with gradient overlay -->
                  {project.image && (
                    <div class="relative h-48 overflow-hidden">
                      <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent z-10"></div>
                      <img
                        src={project.image.src}
                        alt={project.image.alt}
                        class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                      />

                      <!-- Category Badge with glass effect -->
                      {project.category && (
                        <div class="absolute top-4 left-4 z-20">
                          <span class="inline-flex items-center px-3 py-1.5 rounded-full text-xs font-semibold bg-white/20 text-white backdrop-blur-md border border-white/30">
                            {project.category}
                          </span>
                        </div>
                      )}
                    </div>
                  )}

                  <!-- Content Section -->
                  <div class="p-8 flex-1 flex flex-col min-h-[280px]">
                    {/* Project Title */}
                    {project.title && (
                      <h3 class="text-2xl font-bold text-white mb-3 leading-tight">{project.title}</h3>
                    )}

                    {/* Description */}
                    {project.description && (
                      <p class="text-white/90 leading-relaxed mb-4 text-base flex-1">{project.description}</p>
                    )}

                    {/* Technologies */}
                    {project.technologies && project.technologies.length > 0 && (
                      <div class="flex flex-wrap gap-2 mb-6">
                        {project.technologies.slice(0, 4).map((tech) => (
                          <span class="inline-flex items-center px-3 py-1.5 rounded-full text-xs font-semibold bg-white/15 text-white backdrop-blur-sm border border-white/25">
                            {tech}
                          </span>
                        ))}
                      </div>
                    )}

                    {/* Project Actions */}
                    <div class="flex flex-wrap gap-3 mt-auto">
                      {project.liveUrl && project.liveUrl !== '#' && (
                        <a
                          href={project.liveUrl}
                          target="_blank"
                          class="btn-service flex items-center gap-2"
                        >
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path
                              stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="2"
                              d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                            />
                          </svg>
                          View Live
                        </a>
                      )}
                    </div>

                    {/* Completion Date */}
                    {project.completedDate && (
                      <div class="mt-4 pt-4 border-t border-white/20">
                        <span class="text-white/70 text-sm flex items-center gap-2 font-medium">
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path
                              stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="2"
                              d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                            />
                          </svg>
                          Completed {project.completedDate}
                        </span>
                      </div>
                    )}
                  </div>

                  {/* Enhanced hover overlay */}
                  <div class="absolute inset-0 bg-white/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none rounded-3xl"></div>
                </div>
              </article>
            );
          })
        }
      </div>
    </div>
  </section>

  <!-- Section Divider -->
  <div class="w-full h-px bg-gradient-to-r from-transparent via-primary to-transparent opacity-50"></div>

  <!-- CTA Section -->
  <CallToAction
    tagline="Ready to Start?"
    title="Let's Build Your <span class='text-white'>Next Project</span>"
    subtitle="Join the businesses who trust our Burlington-based team to create exceptional digital experiences. Let's bring your vision to life."
    actions={[
      {
        text: 'Start Your Project',
        href: '/contact#form',
        icon: 'tabler:arrow-right',
      },
      {
        text: 'View Our Services',
        href: '/web-development',
        variant: 'secondary',
      },
    ]}
  />
</Layout>
