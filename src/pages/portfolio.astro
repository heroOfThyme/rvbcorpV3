---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import PortfolioGrid from '~/components/widgets/PortfolioGrid.astro';

const metadata = {
  title: 'Our Portfolio | RVB Corp - Burlington Web Agency',
  description:
    'Explore our portfolio of successful web development projects. See how our Burlington-based team creates custom websites and digital solutions for businesses.',
};
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <Hero
    tagline="Our Work"
    actions={[
      {
        variant: 'primary',
        text: 'Start Your Project',
        href: '/contact#form',
        icon: 'tabler:arrow-right',
      },
      {
        text: 'Learn About Us',
        href: '/about',
        variant: 'secondary',
      },
    ]}
  >
    <Fragment slot="title">
      Our <span class="bg-gradient-to-r from-primary to-accent bg-clip-text text-transparent">Portfolio</span>
    </Fragment>
    <Fragment slot="subtitle">
      Explore the websites and digital solutions we've crafted for businesses. From local companies to growing enterprises, see how our Burlington-based team brings visions to life.
    </Fragment>
  </Hero>

  <!-- All Projects Section -->
  <PortfolioGrid
    tagline="Featured Projects"
    projects={[
      {
        title: 'Shields Cement',
        description:
          "Professional concrete contractor website featuring service showcases, testimonials, and lead generation forms for Windsor's trusted concrete specialists.",
        image: { src: '~/assets/images/clients/shields-cement/shields-cement-portfolio-main.webp', alt: 'Shields Cement Website' },
        liveUrl: 'https://shieldscement.ca',
        caseStudyUrl: '/case-study-shields-cement',
        category: 'Cement Work Contractor',
        completedDate: '2025',
        technologies: ['Astro', 'Tailwind CSS', 'Google Analytics'],
      },
      {
        title: 'Legacy Exteriors',
        description:
          'Professional excavation and exterior services website showcasing family-owned business values with customer testimonials and service galleries.',
        image: { src: '~/assets/images/clients/legacy-exteriors/legacy-exteriors-portfolio-main.webp', alt: 'Legacy Exteriors Website' },
        liveUrl: 'https://legacyexteriorsinc.com',
        caseStudyUrl: '/case-study-legacy-exteriors-inc',
        category: 'Excavation Contractor',
        completedDate: '2024',
        technologies: ['Astro', 'React', 'SEO Optimization'],
      },
      {
        title: 'Seniors Helper',
        description:
          'Compassionate cleaning service website designed specifically for seniors in Burlington, featuring accessible design and clear service information.',
        image: { src: '~/assets/images/clients/seniors-helper/seniors-helper-portfolio-main.webp', alt: 'Seniors Helper Website' },
        liveUrl: 'https://seniorshelper.ca',
        caseStudyUrl: '/case-study-seniors-helper',
        category: 'Senior Cleaning Services',
        completedDate: '2025',
        technologies: ['Astro', 'Accessible Design', 'Contact Forms'],
      },
      {
        title: 'S&V Memorials',
        description:
          'Professional memorial services website with elegant design, service showcases, and gallery features for a family-owned monument business.',
        image: { src: '~/assets/images/clients/svmemorials/sv-memorials-portfolio-main.webp', alt: 'S&V Memorials Website' },
        liveUrl: 'https://svmemorials.com',
        caseStudyUrl: '/case-study-svmemorials',
        category: 'Memorial Shop',
        completedDate: '2024',
        technologies: ['Astro', 'Image Gallery', 'Google Maps'],
      },
    ]}
  >
    <Fragment slot="title">
      Building Digital <span class="text-primary">Experiences</span>
    </Fragment>
    <Fragment slot="subtitle">
      Every project is a partnership. Here's how we've helped businesses grow their online presence.
    </Fragment>
  </PortfolioGrid>

</Layout>
