---
import Layout from '~/layouts/PageLayout.astro';
import AboutSection from '~/components/widgets/AboutSection.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import { Icon } from 'astro-icon/components';

const metadata = {
  title: 'About Us - Learn About Our Company | RVB Data Sciences',
  description:
    "Discover RVB Data Sciences Corp - Burlington's passionate web development team helping businesses harness technology. Learn about our values, expertise, and commitment to excellence.",
};
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <Hero
    tagline="About Us"
    actions={[
      {
        variant: 'primary',
        text: 'Get Started',
        href: '/contact',
        icon: 'tabler:arrow-right',
      },
      {
        text: 'View Our Work',
        href: '/portfolio',
        variant: 'secondary',
      },
    ]}
    image={{ src: '~/assets/images/about-us-main.webp', alt: 'RVB Team Coding Away' }}
  >
    <Fragment slot="title">
      Discover Our <span class="text-primary">Business</span>
    </Fragment>

    <Fragment slot="subtitle">
      Welcome to RVB Data Sciences Corp, where our passion for software development fuels our commitment to helping
      businesses utilize the amazing technology the world has to offer.
    </Fragment>
  </Hero>

  <!-- Section Divider -->
  <div class="w-full h-px bg-gradient-to-r from-transparent via-primary to-transparent opacity-50"></div>

  <!-- Mission Statement Banner -->
  <Note />

  <!-- Section Divider -->
  <div class="w-full h-px bg-gradient-to-r from-transparent via-primary to-transparent opacity-50"></div>

  <!-- Core Values Section -->
  <AboutSection
    tagline="Our Foundation"
    title="Why We <span class='text-primary'>Stand Out</span>"
    subtitle="Our core values guide everything we do and shape how we work with our clients"
    values={[
      {
        title: 'Integrity',
        description:
          'We believe in maintaining transparency and honesty in all our dealings, fostering strong relationships with our clients. We go through all contracts and agreements with you to ensure you understand everything.',
        icon: 'tabler:shield-check',
      },
      {
        title: 'Excellence',
        description:
          'We are committed to delivering high-quality solutions that exceed your expectations, ensuring that you are satisfied with the final product. We strive for excellence in everything we do.',
        icon: 'tabler:award',
      },
      {
        title: 'Collaboration',
        description:
          'We believe in working closely with our clients to understand their unique needs and challenges, fostering a collaborative environment that drives results. We value your input and feedback throughout the process.',
        icon: 'tabler:users',
      },
    ]}
  />

  <!-- Section Divider -->
  <div class="w-full h-px bg-gradient-to-r from-transparent via-primary to-transparent opacity-50"></div>

  <!-- Technology Stack Section -->
  <section class="py-16 md:py-20">
    <div class="max-w-6xl mx-auto px-4 sm:px-6">
      <div class="text-center mb-12">
        <div class="flex items-center justify-center gap-2 text-primary mb-4">
          <span class="text-lg font-mono">|</span>
          <p class="text-sm font-medium tracking-wide uppercase font-mono">Technology Stack</p>
        </div>
        <h2 class="text-3xl md:text-4xl font-bold leading-tighter tracking-tighter font-heading text-white mb-4">
          What We <span class="text-primary">Use</span>
        </h2>
        <p class="text-xl text-white/80 max-w-2xl mx-auto">
          A glimpse into the modern technologies we use to build your solutions
        </p>
      </div>

      <!-- Technology List -->
      <div class="max-w-3xl mx-auto">
        <ul class="grid grid-cols-1 md:grid-cols-2 gap-x-16 gap-y-6 justify-items-center">
          {
            [
              { name: 'React', icon: 'tabler:brand-react', color: '#61DAFB' },
              { name: 'Astro', icon: 'tabler:rocket', color: '#FF5D01' },
              { name: 'TypeScript', icon: 'tabler:brand-typescript', color: '#3178C6' },
              { name: 'Tailwind CSS', icon: 'tabler:palette', color: '#06B6D4' },
              { name: 'Node.js', icon: 'tabler:brand-nodejs', color: '#339933' },
              { name: 'Google Cloud', icon: 'tabler:brand-google', color: '#4285F4' },
            ].map((tech) => {
              return (
                <li class="flex items-center gap-4 text-white">
                  <Icon name={tech.icon} class="w-8 h-8 flex-shrink-0" style={`color: ${tech.color}`} />
                  <span class="text-lg font-medium">{tech.name}</span>
                </li>
              );
            })
          }
        </ul>
      </div>
    </div>
  </section>

  <!-- Section Divider -->
  <div class="w-full h-px bg-gradient-to-r from-transparent via-primary to-transparent opacity-50"></div>

  <!-- Client Testimonials -->
  <Testimonials
    tagline="Client Success"
    title="Words from Our <span class='text-primary'>Amazing</span> Clients"
    subtitle="Our favourite part of this job is helping out members of our local communities"
    testimonials={[
      {
        testimonial:
          "Petar worked so hard for me. I'm almost 60 and retired. I needed one page simple website for my new business. He listened and created perfectly what I needed. He's very patient as I am not tech savvy! Thank you!!",
        name: 'Donna Irving',
        job: 'Seniors Helper - Owner',
      },
      {
        testimonial:
          'Great service. Working on improving SEO constantly. Easy to get a hold of and replies usually within hours. Changes are made the same day. We both continue to adjust the website if we notice where improvements can be made.',
        name: 'Alex Orton',
        job: 'Legacy Exteriors Inc - Owner',
      },
      {
        testimonial:
          "RVB did an outstanding job on our website. The team was professional, creative, and attentive to our vision. We felt supported every step of the way and couldn't be happier with our results. Highly recommend their web development services!",
        name: 'Slavko Vidakovic',
        job: 'S&V Memorials - Owner',
      },
    ]}
  />

  <!-- Section Divider -->
  <div class="w-full h-px bg-gradient-to-r from-transparent via-primary to-transparent opacity-50"></div>

  <!-- Final CTA -->
  <CallToAction
    tagline="Ready to Start?"
    title="Let's Build Something <span class='text-primary'>Amazing</span> Together"
    subtitle="Contact us today to discuss your project and discover how we can help you achieve your goals."
    actions={[
      {
        text: 'Start Your Project',
        href: '/contact',
        icon: 'tabler:arrow-right',
        variant: 'primary',
      },
      {
        text: 'View Our Work',
        href: '/portfolio',
        variant: 'secondary',
      },
    ]}
  />
</Layout>
