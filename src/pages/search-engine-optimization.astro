---
import Layout from '~/layouts/PageLayout.astro';

import Hero2 from '~/components/widgets/Hero2.astro';
import GradientFeatures from '~/components/widgets/GradientFeatures.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Content from '~/components/widgets/Content.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import FAQs from '~/components/widgets/FAQs.astro';

const metadata = {
  title: 'SEO Services | Search Engine Optimization | RVB Corp - Burlington',
  description:
    'Professional SEO services from our Burlington-based agency. Improve your search rankings, drive organic traffic, and grow your business with our proven SEO strategies.',
};
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <Hero2
    tagline="Search Engine Optimization"
    image={{ src: '~/assets/images/seo-service-main.webp', alt: 'SEO Services' }}
    actions={[
      {
        variant: 'primary',
        text: 'Get Free SEO Audit',
        href: '/contact#form',
        icon: 'tabler:search',
      },
      {
        variant: 'secondary',
        text: 'View Our Process',
        href: '#process',
      },
    ]}
  >
    <Fragment slot="title">
      Dominate Search Rankings with <span class="bg-gradient-to-r from-primary to-accent bg-clip-text text-transparent"
        >Expert SEO</span
      >
    </Fragment>
    <Fragment slot="subtitle">
      Get found by customers actively searching for your services. Our Burlington-based team uses data-driven SEO
      strategies to improve your search rankings, drive organic traffic, and deliver measurable results for businesses
      everywhere.
    </Fragment>
  </Hero2>

  <!-- Section Divider -->
  <div class="w-full h-px bg-gradient-to-r from-transparent via-primary to-transparent opacity-50"></div>

  <!-- Core SEO Services -->
  <GradientFeatures
    id="services"
    title="Complete SEO Solutions"
    subtitle="Everything you need to dominate search results and drive qualified traffic to your website."
    tagline="OUR SERVICES"
    items={[
      {
        title: 'Keyword Research & Strategy',
        description:
          'Deep-dive keyword analysis to identify high-converting search terms your customers actually use. We find the golden opportunities your competitors are missing.',
        icon: 'tabler:target-arrow',
      },
      {
        title: 'Technical SEO Optimization',
        description:
          'Fix crawlability issues, improve site speed, mobile optimization, and schema markup. We ensure search engines can easily find and index your content.',
        icon: 'tabler:tools',
      },
      {
        title: 'Content Optimization',
        description:
          'Create and optimize high-quality content that ranks well and converts visitors into customers. Every page becomes a lead generation machine.',
        icon: 'tabler:edit',
      },
      {
        title: 'Local SEO Domination',
        description:
          'Dominate local search results with Google My Business optimization, local citations, and geo-targeted content strategies.',
        icon: 'tabler:map-pin',
      },
      {
        title: 'Authority Link Building',
        description:
          'Earn high-quality backlinks from authoritative websites in your industry. Build domain authority that search engines trust.',
        icon: 'tabler:link',
      },
      {
        title: 'Analytics & Reporting',
        description:
          'Track rankings, traffic, conversions, and ROI with detailed monthly reports. See exactly how SEO impacts your bottom line.',
        icon: 'tabler:chart-line',
      },
    ]}
  />

  <!-- Section Divider -->
  <div class="w-full h-px bg-gradient-to-r from-transparent via-primary to-transparent opacity-50"></div>

  <!-- SEO Process Section -->
  <Features3
    id="process"
    title="Our Proven SEO Process"
    subtitle="A systematic approach that delivers consistent results for businesses like yours."
    tagline="HOW WE WORK"
    image={{
      src: '~/assets/images/image-20250512085705-5.jpg',
      alt: 'SEO strategy planning and analytics dashboard',
    }}
    columns={4}
    items={[
      {
        title: '1. Deep Dive Audit',
        description:
          'Comprehensive analysis of your current SEO performance, technical issues, and competitive landscape.',
        icon: 'tabler:search',
      },
      {
        title: '2. Strategy Development',
        description: 'Custom SEO roadmap based on your business goals, target audience, and market opportunities.',
        icon: 'tabler:list',
      },
      {
        title: '3. Implementation',
        description: 'Execute technical fixes, content optimization, and authority building campaigns with precision.',
        icon: 'tabler:rocket',
      },
      {
        title: '4. Monitor & Optimize',
        description: 'Continuous tracking, testing, and refinement to maximize your ROI and maintain rankings.',
        icon: 'tabler:adjustments',
      },
    ]}
  />

  <!-- Section Divider -->
  <div class="w-full h-px bg-gradient-to-r from-transparent via-primary to-transparent opacity-50"></div>

  <!-- Results & Benefits Section -->
  <Content
    id="results"
    isReversed
    title="Results That Speak for Themselves"
    subtitle="Our SEO strategies deliver measurable business growth"
    content="<p>Don't just take our word for it. Our proven SEO methodologies have helped businesses across industries achieve remarkable growth in organic traffic, search rankings, and most importantly - revenue.</p><p>We focus on metrics that matter to your business: qualified leads, conversions, and ROI. Every strategy is tailored to your specific industry, competition, and business goals.</p>"
    items={[
      {
        title: 'Top 3 Rankings for Target Keywords',
        description: 'We consistently get businesses ranking on page 1 for their most valuable search terms.',
        icon: 'tabler:trophy',
      },
      {
        title: 'Boost in Qualified Leads',
        description: 'More traffic means more customers. Our SEO attracts visitors ready to buy.',
        icon: 'tabler:users',
      },
      {
        title: 'Measurable ROI Growth',
        description: 'Track every dollar invested in SEO with clear attribution to revenue growth.',
        icon: 'tabler:chart-arrows-vertical',
      },
    ]}
    image={{
      src: '~/assets/images/rvb-logo-icon.svg',
      alt: 'SEO growth charts and performance metrics dashboard',
    }}
    callToAction={{
      text: 'See Full Case Studies â†’',
      href: '/blog',
      variant: 'link',
    }}
  />

  <!-- Section Divider -->
  <div class="w-full h-px bg-gradient-to-r from-transparent via-primary to-transparent opacity-50"></div>

  <!-- FAQ Section -->
  <FAQs
    title="Frequently Asked Questions"
    subtitle="Get answers to common questions about our SEO services"
    tagline="FAQ"
    columns={2}
    items={[
      {
        title: 'How long does it take to see SEO results?',
        description:
          'Most clients see initial improvements in 3-4 months, with significant results in 6-12 months. SEO is a long-term investment that builds momentum over time.',
      },
      {
        title: 'Do you guarantee #1 rankings?',
        description:
          "We focus on getting you on page 1 for your target keywords. While we can't guarantee specific positions, our track record shows consistent first-page results.",
      },
      {
        title: 'What makes your SEO different?',
        description:
          'We combine technical expertise with business understanding. Every strategy is custom-built for your industry, competition, and revenue goals.',
      },
      {
        title: 'Do you work with small businesses?',
        description:
          'Absolutely! We work with businesses of all sizes and have packages designed specifically for small and medium businesses.',
      },
      {
        title: 'How do you measure SEO success?',
        description:
          "We track rankings, organic traffic, leads, conversions, and ROI. You'll receive detailed monthly reports showing exactly how SEO impacts your business.",
      },
      {
        title: "What if I'm not satisfied with results?",
        description:
          "We're confident in our approach, but if you're not seeing progress after 6 months, we'll work with you to adjust the strategy or provide additional services.",
      },
    ]}
  />

  <!-- Section Divider -->
  <div class="w-full h-px bg-gradient-to-r from-transparent via-primary to-transparent opacity-50"></div>

  <!-- CTA Section -->
  <CallToAction
    id="audit"
    tagline="Ready to Grow?"
    title="Get Your Free <span class='text-white'>SEO Audit</span> Today"
    subtitle="Discover exactly what's holding your website back from ranking higher. Get a comprehensive SEO audit and personalized strategy to dominate search results and grow your business."
    actions={[
      {
        text: 'Get Free SEO Audit',
        href: '/contact#form',
        icon: 'tabler:search',
      },
      {
        text: 'See Our Work',
        href: '/portfolio',
        variant: 'secondary',
      },
    ]}
  />
</Layout>
