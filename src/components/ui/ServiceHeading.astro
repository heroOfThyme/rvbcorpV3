---
import type { Headline as Props } from '~/types';
import { twMerge } from 'tailwind-merge';

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline,
  classes = {},
} = Astro.props;

const {
  container: containerClass = 'max-w-4xl',
  title: titleClass = 'text-4xl md:text-5xl lg:text-6xl',
  subtitle: subtitleClass = 'text-xl md:text-2xl',
} = classes;
---

{
  (title || subtitle || tagline) && (
    <div class={twMerge('mb-12 md:mb-16 text-left', containerClass)}>
      {tagline && (
        <p
          class="text-base text-secondary dark:text-blue-200 font-bold tracking-wide uppercase mb-3"
          set:html={tagline}
        />
      )}
      {title && (
        <h2
          class={twMerge('font-bold leading-tight tracking-tighter font-heading text-heading mb-4', titleClass)}
          set:html={title}
        />
      )}

      {subtitle && <p class={twMerge('text-muted max-w-3xl', subtitleClass)} set:html={subtitle} />}
    </div>
  )
}
