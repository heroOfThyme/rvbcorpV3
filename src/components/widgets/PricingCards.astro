---
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Headline from '~/components/ui/Headline.astro';
import Button from '~/components/ui/Button.astro';
import { Icon } from 'astro-icon/components';

const {
  title = '',
  subtitle = '',
  tagline = '',
  packages = [],
  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;
---

<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-7xl mx-auto ${classes?.container ?? ''}`} bg={bg}>
  <Headline title={title} subtitle={subtitle} tagline={tagline} />

  <div class="grid gap-8 grid-cols-1 md:grid-cols-2 lg:grid-cols-3 items-stretch">
    {
      packages.map((pkg) => (
        <div
          class={`relative rounded-3xl p-8 flex flex-col h-full ${
            pkg.isPopular
              ? 'bg-gradient-to-br from-primary to-accent'
              : 'bg-inherit border border-primary'
          }`}
        >
          {pkg.isPopular && (
            <div class="absolute -top-4 left-1/2 transform -translate-x-1/2">
              <span class="bg-page text-white px-4 py-2 rounded-full text-sm font-medium border-2 border-primary">MOST POPULAR</span>
            </div>
          )}

          <div class="mb-6">
            <div class="text-sm font-semibold uppercase tracking-wider text-gray-400 mb-6">{pkg.title}</div>

            <div class="text-5xl font-bold text-white mb-6">
              {pkg.title === 'basic' ? '$399' : pkg.title === 'business' ? '$1499' : '$4999'}
            </div>

            <p class="text-gray-300 text-lg leading-relaxed mb-8">{pkg.description}</p>
          </div>

          <div class="flex-grow space-y-4 mb-8">
            {pkg.features?.map((feature) => (
              <div class="flex items-center">
                <Icon name="tabler:check" class="w-5 h-5 text-primary mr-4 flex-shrink-0" />
                <span class="text-gray-200 text-lg">{feature}</span>
              </div>
            ))}
          </div>

          <div class="mt-auto">
            <Button
              variant="secondary"
              class={`w-full justify-center border-2 rounded-full py-4 text-lg font-medium transition-all duration-300 ${
                pkg.isPopular
                  ? 'bg-white border-white text-white hover:bg-white hover:text-gray-900'
                  : 'bg-transparent border-primary text-primary hover:bg-primary hover:text-white'
              }`}
              {...(pkg.callToAction || {})}
            >
              {pkg.callToAction?.text || 'Get Started'}
            </Button>
          </div>
        </div>
      ))
    }
  </div>

  {
    packages.some((pkg) => pkg.note) && (
      <div class="mt-12 text-center">
        <p class="text-gray-400 text-base">* {packages.find((pkg) => pkg.note)?.note}</p>
      </div>
    )
  }
</WidgetWrapper>
