---
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Button from '~/components/ui/Button.astro';
import type { CallToAction, Widget } from '~/types';

interface Props extends Widget {
  title?: string;
  subtitle?: string;
  tagline?: string;
  actions?: CallToAction[];
}

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline = await Astro.slots.render('tagline'),
  actions = [],
  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;
---

<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-5xl mx-auto ${classes?.container ?? ''}`} bg={bg}>
  <!-- Full Gradient CTA - Mobile Optimized -->
  <div
    class="group relative overflow-hidden rounded-3xl bg-gradient-to-br from-primary via-secondary to-accent p-6 sm:p-8 md:p-12 shadow-2xl hover:shadow-3xl transition-all duration-500"
  >
    <!-- Animated background effect -->
    <div class="absolute inset-0 bg-gradient-to-br from-white/5 via-transparent to-white/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>

    <!-- Subtle animated gradient overlay -->
    <div class="absolute inset-0 bg-gradient-animated opacity-30 animate-gradient"></div>

    <!-- Content -->
    <div class="relative z-10 text-center max-w-3xl mx-auto">
      {
        tagline && (
          <div class="flex items-center justify-center gap-2 text-white/90 mb-3 sm:mb-4">
            <span class="text-sm sm:text-base font-mono">|</span>
            <p class="text-xs sm:text-sm font-medium tracking-wide uppercase font-mono" set:html={tagline} />
          </div>
        )
      }

      {
        title && (
          <h2 class="text-xl sm:text-2xl md:text-3xl lg:text-4xl font-bold leading-tight tracking-tight font-heading text-white mb-3 sm:mb-4">
            <span set:html={title} />
          </h2>
        )
      }

      {
        subtitle && (
          <p class="text-sm sm:text-base md:text-lg text-white/90 leading-relaxed mb-5 sm:mb-6 max-w-2xl mx-auto">
            <span set:html={subtitle} />
          </p>
        )
      }

      {
        actions.length > 0 && (
          <div class="flex flex-col sm:flex-row gap-3 justify-center items-center">
            {actions.map((action) => (
              <Button
                {...action}
                class="btn-service w-full sm:w-auto"
              />
            ))}
          </div>
        )
      }
    </div>
  </div>
</WidgetWrapper>
