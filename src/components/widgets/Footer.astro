---
import { Icon } from 'astro-icon/components';
import { SITE } from 'rvbcorp:config';
import { getHomePermalink } from '~/utils/permalinks';

interface Link {
  text?: string;
  href?: string;
  ariaLabel?: string;
  icon?: string;
}

interface Links {
  title?: string;
  links: Array<Link>;
}

export interface Props {
  links: Array<Links>;
  secondaryLinks: Array<Link>;
  socialLinks: Array<Link>;
  footNote?: string;
  theme?: string;
}

const { socialLinks = [], secondaryLinks = [], links = [], footNote = '', theme = 'light' } = Astro.props;
---

<footer class:list={[{ dark: theme === 'dark' }, 'relative border-t border-[rgb(198,134,255)]/20 not-prose bg-gradient-to-b from-transparent to-[rgb(198,134,255)]/5']}>
  <div class="dark:bg-dark absolute inset-0 pointer-events-none" aria-hidden="true"></div>

  <!-- Top gradient divider -->
  <div class="w-full h-px bg-gradient-to-r from-transparent via-[rgb(198,134,255)] to-transparent opacity-30"></div>

  <div
    class="relative max-w-7xl mx-auto px-4 sm:px-6 text-white intersect-once intersect-quarter intercept-no-queue motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade"
  >
    <div class="grid grid-cols-12 gap-6 gap-y-12 sm:gap-8 py-12 md:py-16">
      <!-- Brand Section -->
      <div class="col-span-12 lg:col-span-4">
        <div class="mb-4">
          <a
            class="inline-block font-bold text-2xl transition-all duration-300 hover:scale-105"
            href={getHomePermalink()}
            style="font-family: 'Ubuntu', sans-serif; background: linear-gradient(to right, rgb(198, 134, 255), rgb(119, 118, 255)); -webkit-background-clip: text; background-clip: text; -webkit-text-fill-color: transparent;"
          >
            {SITE?.name}
          </a>
        </div>
        <p class="text-muted mb-6 max-w-md leading-relaxed">
          Custom websites, SEO, and digital solutions for businesses in Burlington and beyond.
        </p>
        <div class="text-sm text-muted flex flex-wrap gap-2">
          {
            secondaryLinks.map(({ text, href }, index) => (
              <>
                {index !== 0 && <span class="text-[rgb(198,134,255)]/50">•</span>}
                <a
                  class="text-muted hover:text-[rgb(198,134,255)] transition-colors duration-300"
                  href={href}
                  set:html={text}
                />
              </>
            ))
          }
        </div>
      </div>

      <!-- Links Sections -->
      {
        links.map(({ title, links }, sectionIndex) => (
          <div class="col-span-6 md:col-span-3 lg:col-span-2">
            <div class="text-white font-semibold mb-4 text-sm uppercase tracking-wider">{title}</div>
            {links && Array.isArray(links) && links.length > 0 && (
              <ul class="text-sm space-y-3">
                {links.map(({ text, href, ariaLabel }) => (
                  <li>
                    <a
                      class="text-muted hover:text-[rgb(198,134,255)] transition-all duration-300 inline-flex items-center group"
                      href={href}
                      aria-label={ariaLabel}
                      target={href?.startsWith('http') ? '_blank' : undefined}
                      rel={href?.startsWith('http') ? 'noopener noreferrer' : undefined}
                    >
                      {title === 'Get in Touch' ? (
                        <span class="flex items-center">
                          {text.includes('@') && <Icon name="tabler:mail" class="w-4 h-4 mr-2 flex-shrink-0" />}
                          {text.includes('(') && <Icon name="tabler:phone" class="w-4 h-4 mr-2 flex-shrink-0" />}
                          {!text.includes('@') && !text.includes('(') && <Icon name="tabler:map-pin" class="w-4 h-4 mr-2 flex-shrink-0" />}
                          <Fragment set:html={text} />
                        </span>
                      ) : (
                        <>
                          <span class="mr-2 opacity-0 group-hover:opacity-100 transition-opacity duration-300 text-[rgb(198,134,255)]">→</span>
                          <Fragment set:html={text} />
                        </>
                      )}
                    </a>
                  </li>
                ))}
              </ul>
            )}
          </div>
        ))
      }
    </div>

    <!-- Bottom section with gradient divider -->
    <div class="w-full h-px bg-gradient-to-r from-transparent via-[rgb(198,134,255)]/30 to-transparent mb-8"></div>

    <div class="md:flex md:items-center md:justify-between py-8">
      <div class="text-sm text-muted mb-4 md:mb-0">
        <Fragment set:html={footNote} />
      </div>

      {
        socialLinks?.length ? (
          <ul class="flex gap-3 md:order-1">
            {socialLinks.map(({ ariaLabel, href, text, icon }) => (
              <li>
                <a
                  class="text-muted hover:text-[rgb(198,134,255)] hover:scale-110 transition-all duration-300 rounded-lg p-2.5 inline-flex items-center border border-transparent hover:border-[rgb(198,134,255)]/30 hover:bg-[rgb(198,134,255)]/10"
                  aria-label={ariaLabel}
                  href={href}
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  {icon && <Icon name={icon} class="w-5 h-5" />}
                  <Fragment set:html={text} />
                </a>
              </li>
            ))}
          </ul>
        ) : (
          ''
        )
      }
    </div>
  </div>
</footer>
