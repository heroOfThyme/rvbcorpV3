---
import { Icon } from 'astro-icon/components';
import { getBlogPermalink } from '~/utils/permalinks';
import { I18N } from 'astrowind:config';
import Button from '~/components/ui/Button.astro';

const { textDirection } = I18N;
---

<div class="mx-auto px-6 sm:px-6 max-w-3xl pt-8 md:pt-4 pb-12 md:pb-20">
  <a
    href={getBlogPermalink()}
    class="inline-flex items-center text-muted hover:text-[rgb(198,134,255)] transition-all duration-300 group"
  >
    {
      textDirection === 'rtl' ? (
        <Icon name="tabler:chevron-right" class="w-5 h-5 mr-1 transition-transform duration-300 group-hover:translate-x-1" />
      ) : (
        <Icon name="tabler:chevron-left" class="w-5 h-5 mr-1 transition-transform duration-300 group-hover:-translate-x-1" />
      )
    } Back to Blog
  </a>
</div>
